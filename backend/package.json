{
  "name": "backend",
  "version": "0.0.0",
  "description": "Node server written in TS.",
  "private": true,
  "scripts": {
    "start": "npm run build && npm run watch",
    "build": "npm run build-ts && npm run tslint && npm run build-frontend",
    "serve": "node dist/server.js",
    "watch": "nodemon dist/server.js",
    "test": "jest --forceExit --coverage",
    "build-frontend": "cd ../frontend && npm run build-prod",
    "build-frontend-watch": "cd ../frontend && npm run build-watch",
    "build-ts": "tsc",
    "watch-ts": "tsc -w",
    "tslint": "tslint -c tslint.json -p tsconfig.json"
  },
  "jest": {
    "globals": {
      "__TS_CONFIG__": "tsconfig.json"
    },
    "moduleFileExtensions": [
      "ts",
      "js"
    ],
    "transform": {
      "^.+\\.(ts|tsx)$": "./node_modules/ts-jest/preprocessor.js"
    },
    "testMatch": [
      "**/test/**/*.test.(ts|js)"
    ],
    "testEnvironment": "node"
  },
  "dependencies": {
    "async": "^2.1.2",
    "body-parser": "^1.20.1",
    "compression": "^1.6.2",
    "dotenv": "^2.0.0",
    "errorhandler": "^1.4.3",
    "express": "^4.18.2",
    "express-flash": "^0.0.2",
    "express-session": "^1.14.2",
    "express-validator": "^3.1.3"
  },
  "devDependencies": {
    "@types/async": "^2.0.40",
    "@types/body-parser": "^1.16.2",
    "@types/dotenv": "^2.0.20",
    "@types/errorhandler": "0.0.30",
    "@types/express": "^4.0.35",
    "@types/express-session": "0.0.32",
    "@types/jest": "^19.2.2",
    "@types/node": "^7.0.12",
    "jest": "^19.0.2",
    "nodemon": "^1.11.0",
    "ts-jest": "^19.0.8",
    "tslint": "^5.0.0",
    "typescript": "^2.2.2"
  }
}
